{
  "$schema": "https://alirezanet.github.io/Husky.Net/schema.json",
  "tasks": [
    {
      "name": "Redy to format husky",
      "command": "npx",
      "args": ["prettier", "--ignore-unknown", "--write", "${staged}"],
      "pathMode": "absolute",
      "windows": {
        "command": "npx",
        "args": ["prettier", "--ignore-unknown", "--write", "${staged}"],
        "pathMode": "absolute"
      }
    }
  ]
}
